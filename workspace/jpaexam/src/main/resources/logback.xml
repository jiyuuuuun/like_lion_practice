<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender"><!--콘솔에 로그를 표시하겠다는 뜻, 파일,데이터베이스 등에 로그를 저장할 수 있음-->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug"><!--로그 레벨 설정-->
        <appender-ref ref="STDOUT" />
    </root>

</configuration>